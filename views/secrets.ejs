<!-- secrets.ejs - Displays all secrets of the currently logged-in user -->

<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Your Secrets</h1>

    <!-- Display each secret or a default message -->
    <% if (secrets.length > 0) { %>
      <% secrets.forEach(function(secret) { %>
        <p class="secret-text"><%= secret %></p>
      <% }) %>
    <% } else { %>
      <p class="secret-text">You haven't shared any secrets yet. Submit one now!</p>
    <% } %>

    <hr>
    <a class="btn btn-dark btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
